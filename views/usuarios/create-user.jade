		script(src="javascripts/lib/jquery/jquery.min.js")
		// Bootstrap tether Core JavaScript
		script(src="javascripts/lib/bootstrap/js/popper.min.js")
		script(src="javascripts/lib/bootstrap/js/bootstrap.min.js")
		// slimscrollbar scrollbar JavaScript
		script(src="javascripts/jquery.slimscroll.js")
		// Menu sidebar
		script(src="javascripts/sidebarmenu.js")
		// stickey kit
		script(src="javascripts/lib/sticky-kit-master/dist/sticky-kit.min.js")
		// Form validation
		script(src="javascripts/lib/form-validation/jquery.validate.min.js")
		script(src="javascripts/lib/form-validation/jquery.validate-init.js")
		// FireBase
		script(src="https://www.gstatic.com/firebasejs/4.12.1/firebase-app.js")
		script(src="https://www.gstatic.com/firebasejs/4.12.1/firebase-database.js")
		// Custom JavaScript
		script(src="javascripts/scripts.js")